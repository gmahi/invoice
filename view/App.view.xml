<mvc:View controllerName="search.Invoice.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Input placeholder="{i18n>invType}" value="{/invInput/invType}" description="{i18n>invType} is {/invInput/invType} " valueLiveUpdate="true"/>
	<Input placeholder="{i18n>invNumber}" value="{/invInput/invNumber}" description="Entered {i18n>invNumber} is {/invInput/invNumber}"
		valueLiveUpdate="true"/>
	<Input placeholder="{i18n>invCompanyCode}" value="{/invInput/invCompanyCode}"
		description="{i18n>invCompanyCode} is {/invInput/invCompanyCode} " valueLiveUpdate="true"/>
	<Button text="Search" press=".onSearchInvoices"/>
</mvc:View>