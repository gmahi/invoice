<mvc:View controllerName="search.Invoice.controller.Invoice" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Shell>
		<App>
			<pages>
				<Page title='{i18n>homePageTitle}'>
					<content>
						<Input placeholder="{i18n>invType}" value="{/invInput/invType}" description="{i18n>invType} is {/invInput/invType} " valueLiveUpdate="true"/>
						<Input class="sapUiResponsiveMargin" placeholder="{i18n>invNumber}" value="{/invInput/invNumber}"
							description="Entered {i18n>invNumber} is {/invInput/invNumber}" valueLiveUpdate="true"/>
						<Input class="sapUiResponsiveMargin" placeholder="{i18n>invCompanyCode}" value="{/invInput/invCompanyCode}"
							description="{i18n>invCompanyCode} is {/invInput/invCompanyCode} " valueLiveUpdate="true"/>
						<Button class="sapUiResponsiveMargin" text="Search" press=".onSearchInvoices"/>
						<List headerText='{i18n>invoiceList}' class="sapUIResponsiveMargin" width="auto" items="{inv>/Invoices}">
							<items>
								<ObjectListItem title="{inv>Vbeln}-{inv>Bukrs}"
									number="{ parts:[{path: 'inv>Amount'}, {path:'inv>/Waers'}], type: 'sap.ui.model.type.Currency', formatOptions: { showMeasure: false } }"
									numberUnit="{inv>Waers}" numberState="{= ${inv>Amount}>120 ? 'Error' : 'Success'}">
									<ObjectAttribute text="{path:'inv>InvStatus', formatter:'.formatter.readbleInvStatus' }"/>
									<markers>
										<ObjectMarker type="{= ${inv>InvStatus} === 'CONF' ? 'Favorite' :'Flagged'}"/>
									</markers>
								</ObjectListItem>
							</items>
						</List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>